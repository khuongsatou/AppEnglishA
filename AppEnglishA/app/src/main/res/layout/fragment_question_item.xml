<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.QuestionItemFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textSize="100sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuestionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Question"
                android:textColor="#2962FF"
                android:textSize="30sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:padding="10dp"
                android:tag="A"
                android:text="A."
                android:id="@+id/btnSchemes_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:tag="B"
                android:text="B."
                android:id="@+id/btnSchemes_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:tag="C"
                android:text="C."
                android:id="@+id/btnSchemes_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:tag="D"
                android:text="D."
                android:id="@+id/btnSchemes_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#E64A19"
                android:textSize="20sp"
                android:id="@+id/tvExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giải thích:"
                />

        </LinearLayout>

    </LinearLayout>



</FrameLayout>